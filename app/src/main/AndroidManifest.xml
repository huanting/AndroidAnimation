<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hat.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FrameAnimationActivity"/>
        <activity android:name=".TweenAnimationActivity"/>
        <activity android:name=".PropertyAnimationActivity"/>
        <activity android:name=".ScaleActivity"/>
        <activity android:name=".AlphaActivity"/>
        <activity android:name=".TranslateActivity"/>
        <activity android:name=".RotateActivity"/>
        <activity android:name=".ObjectAnimatorActivity"/>
        <activity android:name=".ValueAnimatorActivity"/>
        <activity android:name=".AnimatorSetActivity"/>
    </application>

</manifest>